<label for="message">Message</label>
<textarea id="message" name="message" rows="4" autofocus></textarea>
</div>
<div >
<label for="email">Email</label>
<input id="email" name="email" type="email" value="" />
</div>
<div >
<button type="submit">Send</button>
</div>
</form>